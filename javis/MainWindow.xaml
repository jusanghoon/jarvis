<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="javis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="JARVIS"
        Width="1200" Height="720"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="#0B1A2A"
        PreviewKeyDown="MainWindow_PreviewKeyDown">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title bar -->
        <Grid Grid.ColumnSpan="2" Grid.Row="0" Height="64" Background="#22000000" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Margin="18,0,0,0"
                       VerticalAlignment="Center"
                       Foreground="#EAF6FF"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Text="JARVIS"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,14,10">
                <Button Click="Min_Click"
                        Width="44" Height="32"
                        Background="#11FFFFFF"
                        BorderBrush="#22FFFFFF"
                        BorderThickness="1">
                    <TextBlock Text="_" Foreground="#EAF6FF" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
                <Button Click="Max_Click" Margin="6,0,0,0"
                        Width="44" Height="32"
                        Background="#11FFFFFF"
                        BorderBrush="#22FFFFFF"
                        BorderThickness="1">
                    <TextBlock Text="[]" Foreground="#EAF6FF" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
                <Button Click="Close_Click" Margin="6,0,0,0"
                        Width="44" Height="32"
                        Background="#11FFFFFF"
                        BorderBrush="#22FFFFFF"
                        BorderThickness="1">
                    <TextBlock Text="X" Foreground="#EAF6FF" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Left nav -->
        <Border Grid.Column="0" Grid.Row="1" Background="#22000000" BorderBrush="#22FFFFFF" BorderThickness="0,1,1,0">
            <ListBox x:Name="Nav"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="#EAF6FF"
                     SelectionChanged="Nav_SelectionChanged">
                <ListBoxItem Tag="home" Content="Home" Foreground="#EAF6FF"/>
                <ListBoxItem Tag="chat" Content="Chat" Foreground="#EAF6FF"/>
                <ListBoxItem Tag="todos" Content="Todos" Foreground="#EAF6FF"/>
                <ListBoxItem Tag="skills" Content="Skills" Foreground="#EAF6FF"/>
                <ListBoxItem Tag="settings" Content="Settings" Foreground="#EAF6FF"/>
            </ListBox>
        </Border>

        <!-- Main content -->
        <Border Grid.Column="1" Grid.Row="1" Margin="18" Background="#22FFFFFF" BorderBrush="#33BFE9FF" BorderThickness="1" CornerRadius="18">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window>
