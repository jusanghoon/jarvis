<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="javis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:javis.UI.Controls"
        Title="JARVIS"
        Width="1200" Height="720"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="{StaticResource AppBackgroundBrush}"
        PreviewKeyDown="MainWindow_PreviewKeyDown"
        FontFamily="Segoe UI, Malgun Gothic, Segoe UI Emoji">

    <ui:ScaleToFitDecorator DesignWidth="1200" DesignHeight="720">
        <Grid Width="1200" Height="720">
            <!-- Background (no image): soft gradient + ornaments -->
            <Border Background="{StaticResource PastelBackgroundImageBrush}"/>

            <Canvas IsHitTestVisible="False">
                <Ellipse Width="520" Height="520" Canvas.Left="-180" Canvas.Top="-160" Fill="{StaticResource PastelBlobBlue}"/>
                <Ellipse Width="460" Height="460" Canvas.Left="80" Canvas.Top="520" Fill="{StaticResource PastelBlobPink}"/>
                <Ellipse Width="520" Height="520" Canvas.Left="740" Canvas.Top="140" Fill="{StaticResource PastelBlobMint}"/>
                <Ellipse Width="340" Height="340" Canvas.Left="980" Canvas.Top="-120" Fill="{StaticResource PastelBlobPink}" Opacity="0.65"/>
            </Canvas>

            <DockPanel Margin="18">
                <!-- Title bar -->
                <Border DockPanel.Dock="Top" Height="64" Background="#00FFFFFF" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <DockPanel LastChildFill="True">
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,10">
                            <Button Click="Min_Click" Style="{StaticResource TitleBarButton}">
                                <TextBlock Text="_" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button>
                            <Button Click="Max_Click" Margin="6,0,0,0" Style="{StaticResource TitleBarButton}">
                                <TextBlock Text="[]" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button>
                            <Button Click="Close_Click" Margin="6,0,0,0" Style="{StaticResource TitleBarButton}">
                                <TextBlock Text="X" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button>
                        </StackPanel>

                        <TextBlock Margin="6,0,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Text="JARVIS"/>
                    </DockPanel>
                </Border>

                <!-- Body -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="182"/>
                        <ColumnDefinition Width="18"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="18"/>
                        <ColumnDefinition Width="340"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left nav -->
                    <Border Grid.Column="0" Background="#00FFFFFF" Padding="6,8">
                        <Border CornerRadius="18" Background="#5AFFFFFF" BorderBrush="#33FFFFFF" BorderThickness="1" Padding="10,12">
                            <StackPanel>
                                <TextBlock Text="JARVIS" FontWeight="Bold" FontSize="16" Margin="8,0,0,12" />

                                <ListBox x:Name="Nav"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontSize="14"
                                         SelectionChanged="Nav_SelectionChanged">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="MinHeight" Value="38"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border x:Name="Bd"
                                                                Padding="{TemplateBinding Padding}"
                                                                CornerRadius="14"
                                                                Background="Transparent"
                                                                BorderBrush="Transparent"
                                                                BorderThickness="1">
                                                            <ContentPresenter />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="#99FFFFFF"/>
                                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#55B39DFF"/>
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="#77FFFFFF"/>
                                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#44FFFFFF"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>

                                    <ListBoxItem Tag="home" Content="Home" />
                                    <ListBoxItem Tag="chat" Content="Chat" />
                                    <ListBoxItem Tag="todos" Content="Todos" />
                                    <ListBoxItem Tag="skills" Content="Skills" />
                                    <ListBoxItem Tag="settings" Content="Settings" />
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </Border>

                    <!-- Combined area: Calendar(top) + Summary(bottom) -->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.25*"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="0.75*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource LargePanelPink}">
                            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
                        </Border>

                        <Border Grid.Row="2" Style="{StaticResource LargePanelMint}">
                            <Frame x:Name="AuxFrame" NavigationUIVisibility="Hidden" />
                        </Border>
                    </Grid>

                    <!-- Right panel toggle rail (always visible) -->
                    <Grid Grid.Column="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid.Resources>
                            <Style TargetType="ToggleButton" x:Key="RightPanelRailToggleStyle">
                                <Setter Property="Width" Value="18"/>
                                <Setter Property="Height" Value="64"/>
                                <Setter Property="Background" Value="#66FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#33FFFFFF"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="Bd"
                                                    CornerRadius="9"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#88FFFFFF"/>
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#55B39DFF"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="Bd" Property="Opacity" Value="0.88"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#55B39DFF"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Grid.Resources>

                        <ToggleButton x:Name="RightPanelToggle"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Top"
                                      Margin="0,22,0,0"
                                      IsChecked="True"
                                      Checked="RightPanelToggle_Checked"
                                      Unchecked="RightPanelToggle_Unchecked"
                                      ToolTip="재민 패널 토글"
                                      Style="{StaticResource RightPanelRailToggleStyle}">
                            <TextBlock x:Name="RightPanelToggleGlyph"
                                       Text="❮"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#55606C"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </ToggleButton>
                    </Grid>

                    <!-- Right (blue) panel -->
                    <Border x:Name="RightPanelHost" Grid.Column="4" Style="{StaticResource LargePanelBlue}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"
                                    CornerRadius="18"
                                    Background="#66FFFFFF"
                                    BorderBrush="#33FFFFFF"
                                    BorderThickness="1"
                                    Padding="12,8"
                                    Margin="0,0,0,12">
                                <TextBlock Text="재민 - AI 관리자"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="4,0,0,0"/>
                            </Border>

                            <ui:MainAiWidget Grid.Row="1"
                                             x:Name="MainAiWidget"
                                             Margin="0"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Stretch"/>
                        </Grid>
                    </Border>
                </Grid>
            </DockPanel>
        </Grid>
    </ui:ScaleToFitDecorator>
</Window>
