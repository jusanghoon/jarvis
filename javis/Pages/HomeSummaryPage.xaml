<Page x:Class="javis.Pages.HomeSummaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <Grid Margin="12">
        <Border CornerRadius="18"
                Background="#CCFFFFFF"
                BorderBrush="#33FFFFFF"
                BorderThickness="1"
                Padding="12">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="요약"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Foreground="#FF1F2B36"
                           Margin="0,0,0,8"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Top3 -->
                    <Border Grid.Column="0" CornerRadius="14" Background="#66FFFFFF" BorderBrush="#33FFFFFF" BorderThickness="1" Padding="10">
                        <StackPanel>
                            <TextBlock Text="다가오는 할 일 (Top 3)" FontSize="13" FontWeight="SemiBold" Foreground="#FF1F2B36"/>
                            <TextBlock Margin="0,6,0,10" Foreground="#55606C" Text="{Binding SummaryText}"/>

                            <ListBox ItemsSource="{Binding UpcomingTop3}" Background="Transparent" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Background="#66FFFFFF" BorderBrush="#33FFFFFF" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="92"/>
                                                    <ColumnDefinition Width="70"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Foreground="#55606C"
                                                           Text="{Binding Date, StringFormat={}{0:MM-dd (ddd)}}"/>

                                                <TextBlock Grid.Column="1" Foreground="#55606C"
                                                           Text="{Binding Time, StringFormat={}{0:hh\\:mm}}"/>

                                                <TextBlock Grid.Column="2" Foreground="#FF1F2B36" TextWrapping="Wrap"
                                                           Text="{Binding Title}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <!-- Right: Fossils -->
                    <Border Grid.Column="2" CornerRadius="14" Background="#66FFFFFF" BorderBrush="#33FFFFFF" BorderThickness="1" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="최근 Fossil" FontSize="13" FontWeight="SemiBold" Foreground="#FF1F2B36"/>

                            <TextBlock Grid.Row="1" Text="불러오는 중..." Opacity="0.7" Foreground="#55606C">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFossilsLoading}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Grid.Row="2" Text="{Binding FossilsError}" Foreground="Tomato" TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <ListBox Grid.Row="3" ItemsSource="{Binding RecentFossils}" Margin="0,10,0,0" Background="Transparent" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" Padding="10" Margin="0,0,0,8" BorderThickness="1" BorderBrush="#33FFFFFF" Background="#66FFFFFF">
                                            <StackPanel>
                                                <DockPanel LastChildFill="True">
                                                    <TextBlock DockPanel.Dock="Left" Foreground="#55606C" FontSize="12" Opacity="0.9"
                                                               Text="{Binding Ts, StringFormat={}{0:MM-dd HH:mm}}" />

                                                    <Border DockPanel.Dock="Right" CornerRadius="8" Padding="6,2" Background="#33FFFFFF">
                                                        <TextBlock Foreground="#55606C" FontSize="12" Opacity="0.9"
                                                                   Text="{Binding SourceCount, StringFormat=Sources: {0}}" />
                                                    </Border>
                                                </DockPanel>

                                                <TextBlock Foreground="#FF1F2B36" Margin="0,6,0,0"
                                                           Text="{Binding Content}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
