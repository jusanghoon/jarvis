<Page x:Class="javis.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:javis.Controls"
      xmlns:services="clr-namespace:javis.Services"
      Background="Transparent">

    <Grid Margin="0">
        <Border Style="{StaticResource CardBorderStyle}" Padding="6">
            <StackPanel>
                <TextBlock Text="Settings" FontSize="18" FontWeight="SemiBold"/>

                <!-- User -->
                <Border Margin="0,8,0,0"
                        CornerRadius="14"
                        Background="#F7FFFFFF"
                        BorderBrush="{StaticResource CardBorder}"
                        BorderThickness="1"
                        Padding="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="User"
                                   Foreground="{StaticResource TextMuted}"
                                   VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Text="{Binding ActiveUserName, Source={x:Static Member=services:UserProfileService.Instance}}"
                                   VerticalAlignment="Center"/>

                        <Button Grid.Row="0" Grid.Column="2"
                                Content="선택"
                                Click="UserSelect_Click"
                                Margin="8,0,0,0"
                                Padding="10,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Margin="0,6,0,0"
                                   Text="Note"
                                   Foreground="{StaticResource TextMuted}"
                                   VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                   Margin="0,6,0,0"
                                   Text="유저별로 Jarvis 설정/기록을 분리할 수 있습니다."
                                   Foreground="{StaticResource TextMuted}"/>
                    </Grid>
                </Border>

                <!-- Model -->
                <Border Margin="0,8,0,0"
                        CornerRadius="14"
                        Background="#F7FFFFFF"
                        BorderBrush="{StaticResource CardBorder}"
                        BorderThickness="1"
                        Padding="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Model"
                                   Foreground="{StaticResource TextMuted}"
                                   VerticalAlignment="Center"/>

                        <ComboBox Grid.Row="0" Grid.Column="1"
                                  Height="32"
                                  Background="#F2FFFFFF"
                                  Foreground="{StaticResource TextPrimary}"
                                  BorderBrush="{StaticResource CardBorder}"
                                  SelectedValuePath="Content"
                                  SelectedValue="{Binding Model, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBoxItem Content="qwen3:4b"/>
                            <ComboBoxItem Content="qwen3:8b"/>
                        </ComboBox>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Margin="0,6,0,0"
                                   Text="Hotkeys"
                                   Foreground="{StaticResource TextMuted}"
                                   VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Margin="0,6,0,0"
                                   Text="Ctrl+1 = qwen3:4b / Ctrl+2 = qwen3:8b"
                                   Foreground="{StaticResource TextMuted}"/>
                    </Grid>
                </Border>

                <!-- Updates -->
                <Border Margin="0,8,0,0"
                        CornerRadius="14"
                        Background="#F7FFFFFF"
                        BorderBrush="{StaticResource CardBorder}"
                        BorderThickness="1"
                        Padding="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Updates"
                                   Foreground="{StaticResource TextMuted}"
                                   VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="1"
                                   Text="나중에 적용할 업데이트/변경사항 메모"
                                   Foreground="{StaticResource TextMuted}"
                                   VerticalAlignment="Center"/>

                        <Button Grid.Column="2"
                                Content="열기"
                                Click="Updates_Click"
                                Margin="8,0,0,0"
                                Padding="10,5"/>
                    </Grid>
                </Border>

                <!-- Display -->
                <Border Margin="0,8,0,0"
                        CornerRadius="14"
                        Background="#F7FFFFFF"
                        BorderBrush="{StaticResource CardBorder}"
                        BorderThickness="1"
                        Padding="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Display"
                                   Foreground="{StaticResource TextMuted}"
                                   VerticalAlignment="Center"/>

                        <CheckBox Grid.Row="0" Grid.Column="1"
                                  Content="해상도 표시"
                                  IsChecked="{Binding SettingsShowResolution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,6,0,0"
                                    Visibility="{Binding IsResolutionVisible}">
                            <TextBlock Text="{Binding ResolutionSummary}"
                                       Foreground="{StaticResource TextMuted}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <CheckBox Grid.Row="2" Grid.Column="1" Margin="0,10,0,0"
                                  Content="로컬 장치 진단/자동 적응 사용"
                                  IsChecked="{Binding LocalDeviceDiagnosticsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </Border>

                <!-- Device -->
                <Border Margin="0,8,0,0"
                        CornerRadius="14"
                        Background="#F7FFFFFF"
                        BorderBrush="{StaticResource CardBorder}"
                        BorderThickness="1"
                        Padding="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Device"
                                   Foreground="{StaticResource TextMuted}"
                                   VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Text="{Binding DeviceId}"
                                   Foreground="{StaticResource TextMuted}"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="UI Scale(기기별)" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                                <TextBox Width="70" Margin="10,0,0,0"
                                         Text="{Binding UiScaleOverrideValueText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <Button Margin="6,0,0,0" Padding="10,5"
                                        Content="현재값"
                                        Command="{Binding SetUiScaleOverrideToCurrentCommand}"/>
                                <Button Margin="10,0,0,0" Padding="10,5"
                                        Content="저장"
                                        Command="{Binding SaveUiScaleOverrideCommand}"/>
                                <Button Margin="6,0,0,0" Padding="10,5"
                                        Content="해제"
                                        Command="{Binding ClearUiScaleOverrideCommand}"/>
                            </StackPanel>

                            <TextBlock Margin="0,6,0,0"
                                       Foreground="{StaticResource TextMuted}"
                                       Text="이 값은 현재 프로필/현재 기기(DeviceId)에만 저장됩니다."/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- System Operations & AI Refactoring -->
                <Border Margin="0,8,0,0"
                        Style="{StaticResource CardBorderStyle}"
                        Padding="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <controls:CyberHeartControl x:Name="SoloHeart"
                                                       Grid.Column="0"
                                                       Width="80"
                                                       Height="80"
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,12,0"
                                                       IsThinking="{Binding IsSoloThinkingStarting}"/>

                            <TextBlock Grid.Column="1"
                                       Text="System Operations &amp; AI Refactoring"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <UniformGrid Grid.Row="1" Rows="2" Columns="2" HorizontalAlignment="Stretch" Margin="15,0,15,20">
                            <Button Content="SCAN" Command="{Binding ScanSystemCommand}" FontWeight="Bold" Height="66" Margin="0,0,10,10" Foreground="#FF00D2FF" BorderBrush="#FF00D2FF" Background="Transparent" BorderThickness="1" Padding="5">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#FF00D2FF"/>
                                </Button.Effect>
                            </Button>
                            <Button Content="ANALYZE" Command="{Binding ProposeRefactorCommand}" FontWeight="Bold" Height="66" Margin="0,0,0,10" Foreground="#FF8A6BFF" BorderBrush="#FF8A6BFF" Background="Transparent" BorderThickness="1" Padding="5">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#FF8A6BFF"/>
                                </Button.Effect>
                            </Button>
                            <Button Content="EXECUTE" Command="{Binding ExecuteRefactorCommand}" FontWeight="Bold" Height="66" Margin="0,0,10,0" Foreground="#FF00FF85" BorderBrush="#FF00FF85" Background="Transparent" BorderThickness="1" Padding="5">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#FF00FF85"/>
                                </Button.Effect>
                            </Button>
                            <Button Content="RESTORE" Command="{Binding RestoreLastChangeCommand}" FontWeight="Bold" Height="66" Margin="0" Foreground="#FFFF4B4B" BorderBrush="#FFFF4B4B" Background="Transparent" BorderThickness="1" Padding="5">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#FFFF4B4B"/>
                                </Button.Effect>
                            </Button>
                        </UniformGrid>

                        <Border Grid.Row="2" Background="#FF0F0F1A" CornerRadius="10" BorderBrush="#FF252545" BorderThickness="1" Padding="15" MaxHeight="300">
                            <ScrollViewer x:Name="LogScrollViewer"
                                          VerticalScrollBarVisibility="Visible"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Background="Transparent"
                                          Style="{StaticResource NeonScrollbarStyle}">
                                <TextBlock Text="{Binding ThinkingStage}"
                                           TextWrapping="Wrap"
                                           Foreground="#FF00D2FF"
                                           FontFamily="Cascadia Code"
                                           FontSize="12">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.6" Color="#FF00D2FF"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </ScrollViewer>
                        </Border>

                        <ProgressBar Grid.Row="3" Height="6" Margin="0,10,0,0" IsIndeterminate="{Binding IsSoloThinkingStarting}" Foreground="#FF8A6BFF" Background="#33000000"/>
                    </Grid>
                </Border>

            </StackPanel>
        </Border>
    </Grid>
</Page>
