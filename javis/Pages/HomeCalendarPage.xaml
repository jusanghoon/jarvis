<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="javis.Pages.HomeCalendarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:javis.Converters"
      Background="Transparent">

    <Page.Resources>
        <local:DateHasTodoToVisibilityConverter x:Key="DateHasTodoVis"/>

        <Style x:Key="TodoCalendarDayButtonStyle" TargetType="{x:Type CalendarDayButton}">
            <Setter Property="MinWidth" Value="30"/>
            <Setter Property="MinHeight" Value="24"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#FF1F2B36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CalendarDayButton}">
                        <Border x:Name="Bd"
                                CornerRadius="9"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                Padding="1">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>

                                <Ellipse Width="6" Height="6"
                                         VerticalAlignment="Bottom"
                                         Margin="0,0,0,2"
                                         Fill="#7BCBFF">
                                    <Ellipse.Visibility>
                                        <MultiBinding Converter="{StaticResource DateHasTodoVis}">
                                            <Binding />
                                            <Binding Path="DataContext.TodoDates"
                                                     RelativeSource="{RelativeSource AncestorType=Calendar}"/>
                                        </MultiBinding>
                                    </Ellipse.Visibility>
                                </Ellipse>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#BB7BB6FF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#CC5A9DFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#66FFFFFF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#55B39DFF"/>
                            </Trigger>
                            <Trigger Property="IsToday" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#AAFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsInactive" Value="True">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TodoCalendarStyle" TargetType="{x:Type Calendar}">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#FF1F2B36"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CalendarDayButtonStyle" Value="{StaticResource TodoCalendarDayButtonStyle}"/>
        </Style>
    </Page.Resources>

    <Grid Margin="14">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="14"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Calendar (smaller) -->
        <Border Grid.Column="0"
                CornerRadius="18"
                Background="#CCFFFFFF"
                BorderBrush="#33FFFFFF"
                BorderThickness="1"
                Padding="8">
            <DockPanel LastChildFill="True">
                <TextBlock DockPanel.Dock="Top" Text="캘린더" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4"/>

                <StackPanel>
                    <Calendar x:Name="Calendar"
                              Height="230"
                              Margin="-4,-2,-4,0"
                              SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                              DisplayDate="{Binding SelectedDate}"
                              Style="{StaticResource TodoCalendarStyle}" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Selected day Todos -->
        <Border Grid.Column="2"
                CornerRadius="18"
                Background="#CCFFFFFF"
                BorderBrush="#33FFFFFF"
                BorderThickness="1"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="선택한 날짜 할 일"
                           Foreground="#FF1F2B36"
                           FontSize="15"
                           FontWeight="SemiBold"/>

                <TextBlock Grid.Row="1"
                           Margin="0,4,0,8"
                           Text="{Binding SelectedDate, StringFormat={}{0:yyyy-MM-dd (ddd)}}"
                           Foreground="#55606C"/>

                <Grid Grid.Row="2">
                    <ListBox ItemsSource="{Binding SelectedDateTodos}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="12"
                                        Background="#66FFFFFF"
                                        BorderBrush="#33FFFFFF"
                                        BorderThickness="1"
                                        Padding="10"
                                        Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="86"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Foreground="#55606C"
                                                   Text="{Binding Time, StringFormat={}{0:hh\\:mm}}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Time}" Value="{x:Null}">
                                                            <Setter Property="Text" Value=""/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Grid.Column="1"
                                                   Foreground="#FF1F2B36"
                                                   Text="{Binding Title}"
                                                   TextWrapping="Wrap"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button VerticalAlignment="Top"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            HorizontalContentAlignment="Left"
                            Click="OpenTodos_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedDateTodos.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Foreground="#55606C" Opacity="0.78" TextWrapping="Wrap">
할 일이 없습니다.

클릭해서 Todos 화면에서 추가하세요.
                        </TextBlock>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
