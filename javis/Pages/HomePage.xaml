<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="javis.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:javis.Converters"
      Background="Transparent">

    <Page.Resources>
        <local:DateHasTodoToVisibilityConverter x:Key="DateHasTodoVis"/>

        <Style x:Key="TodoCalendarDayButtonStyle" TargetType="{x:Type CalendarDayButton}">
            <Setter Property="MinWidth" Value="36"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#FF1F2B36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CalendarDayButton}">
                        <Border x:Name="Bd"
                                CornerRadius="10"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                Padding="2">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>

                                <Ellipse Width="7" Height="7"
                                         VerticalAlignment="Bottom"
                                         Margin="0,0,0,3"
                                         Fill="#7BCBFF">
                                    <Ellipse.Visibility>
                                        <MultiBinding Converter="{StaticResource DateHasTodoVis}">
                                            <Binding />
                                            <Binding Path="DataContext.TodoDates"
                                                     RelativeSource="{RelativeSource AncestorType=Calendar}"/>
                                        </MultiBinding>
                                    </Ellipse.Visibility>
                                </Ellipse>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#BB7BB6FF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#CC5A9DFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#66FFFFFF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#55B39DFF"/>
                            </Trigger>
                            <Trigger Property="IsToday" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#AAFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsInactive" Value="True">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TodoCalendarStyle" TargetType="{x:Type Calendar}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF1F2B36"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CalendarDayButtonStyle" Value="{StaticResource TodoCalendarDayButtonStyle}"/>
        </Style>
    </Page.Resources>

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                CornerRadius="18"
                Background="#CCFFFFFF"
                BorderBrush="#33FFFFFF"
                BorderThickness="1"
                Padding="10">
            <StackPanel>
                <TextBlock Text="캘린더" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <Calendar SelectedDate="{Binding SelectedDate}"
                          DisplayDate="{Binding SelectedDate}"
                          Style="{StaticResource TodoCalendarStyle}" />
                <TextBlock Text="{Binding SelectedDate, StringFormat={}{0:yyyy-MM-dd (ddd)}}"
                           Foreground="#55606C" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="2"
                CornerRadius="18"
                Background="#CCFFFFFF"
                BorderBrush="#33FFFFFF"
                BorderThickness="1"
                Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="다가오는 할 일 (Top 3)"
                           Foreground="#FF1F2B36"
                           FontSize="16"
                           FontWeight="SemiBold"/>

                <TextBlock Grid.Row="1"
                           Margin="0,8,0,12"
                           Text="{Binding SummaryText}"
                           Foreground="#55606C"/>

                <ListBox Grid.Row="2"
                         ItemsSource="{Binding UpcomingTop3}"
                         Background="Transparent"
                         BorderThickness="0"
                         MouseDoubleClick="UpcomingList_MouseDoubleClick"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="12"
                                    Background="#66FFFFFF"
                                    BorderBrush="#33FFFFFF"
                                    BorderThickness="1"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Foreground="#55606C"
                                               Text="{Binding Date, StringFormat={}{0:MM-dd (ddd)}}"/>

                                    <TextBlock Grid.Column="1"
                                               Foreground="#55606C"
                                               Text="{Binding Time, StringFormat={}{0:hh\\:mm}}"/>

                                    <TextBlock Grid.Column="2"
                                               Foreground="#FF1F2B36"
                                               Text="{Binding Title}"
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="3" Margin="0,12,0,0">
                    <TextBlock Text="최근 Fossil" FontWeight="SemiBold" FontSize="14" Foreground="#FF1F2B36" Margin="0,0,0,6"/>

                    <TextBlock Text="불러오는 중..." Opacity="0.7" Foreground="#55606C">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsFossilsLoading}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Text="{Binding FossilsError}" Foreground="Tomato" TextWrapping="Wrap">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Text="아직 기록이 없습니다" Opacity="0.7" Foreground="#55606C">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsFossilsLoading}" Value="False"/>
                                            <Condition Binding="{Binding RecentFossils.Count}" Value="0"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <ListBox x:Name="FossilList"
                            ItemsSource="{Binding RecentFossils}" Margin="0,6,0,0" Background="Transparent" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto"
                            MouseDoubleClick="FossilList_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10" Padding="10" Margin="0,0,0,8" BorderThickness="1" BorderBrush="#33FFFFFF" Background="#66FFFFFF">
                                    <StackPanel>
                                        <DockPanel LastChildFill="True">
                                            <TextBlock DockPanel.Dock="Left" Foreground="#55606C" FontSize="12" Opacity="0.9"
                                                       Text="{Binding Ts, StringFormat={}{0:MM-dd HH:mm}}" />

                                            <Border DockPanel.Dock="Right" CornerRadius="8" Padding="6,2" Background="#33FFFFFF">
                                                <TextBlock Foreground="#55606C" FontSize="12" Opacity="0.9"
                                                           Text="{Binding SourceCount, StringFormat=Sources: {0}}" />
                                            </Border>
                                        </DockPanel>

                                        <TextBlock Foreground="#FF1F2B36" Margin="0,6,0,0"
                                                   Text="{Binding Content}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Page>
