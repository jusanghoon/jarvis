<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="javis.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:javis.Converters"
      Background="Transparent">

    <Page.Resources>
        <local:DateHasTodoToVisibilityConverter x:Key="DateHasTodoVis"/>

        <Style x:Key="TodoCalendarDayButtonStyle" TargetType="{x:Type CalendarDayButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CalendarDayButton}">
                        <Grid>
                            <Border x:Name="Bd"
                                    CornerRadius="8"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="1"
                                    Padding="2">
                                <Grid>
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>

                                    <Ellipse Width="4" Height="4"
                                             VerticalAlignment="Bottom"
                                             Margin="0,0,0,3"
                                             Fill="#BFE9FF">
                                        <Ellipse.Visibility>
                                            <MultiBinding Converter="{StaticResource DateHasTodoVis}">
                                                <Binding />
                                                <Binding Path="DataContext.TodoDates"
                                                         RelativeSource="{RelativeSource AncestorType=Calendar}"/>
                                            </MultiBinding>
                                        </Ellipse.Visibility>
                                    </Ellipse>
                                </Grid>
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#334FC3FF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#66BFE9FF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#55BFE9FF"/>
                            </Trigger>
                            <Trigger Property="IsToday" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#88FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsInactive" Value="True">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="14">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                CornerRadius="16"
                Background="#22000000"
                BorderBrush="#33BFE9FF"
                BorderThickness="1"
                Padding="12">
            <StackPanel>
                <TextBlock Text="캘린더" Foreground="#EAF6FF" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <Calendar SelectedDate="{Binding SelectedDate}"
                          DisplayDate="{Binding SelectedDate}"
                          CalendarDayButtonStyle="{StaticResource TodoCalendarDayButtonStyle}" />
                <TextBlock Text="{Binding SelectedDate, StringFormat={}{0:yyyy-MM-dd (ddd)}}"
                           Foreground="#A8C7D9" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="2"
                CornerRadius="16"
                Background="#22000000"
                BorderBrush="#33BFE9FF"
                BorderThickness="1"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="다가오는 할 일 (Top 3)"
                           Foreground="#EAF6FF"
                           FontSize="16"
                           FontWeight="SemiBold"/>

                <TextBlock Grid.Row="1"
                           Margin="0,8,0,12"
                           Text="{Binding SummaryText}"
                           Foreground="#A8C7D9"/>

                <ListBox Grid.Row="2"
                         ItemsSource="{Binding UpcomingTop3}"
                         Background="Transparent"
                         BorderThickness="0"
                         MouseDoubleClick="UpcomingList_MouseDoubleClick"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="12"
                                    Background="#11FFFFFF"
                                    BorderBrush="#22FFFFFF"
                                    BorderThickness="1"
                                    Padding="10"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Foreground="#A8C7D9"
                                               Text="{Binding Date, StringFormat={}{0:MM-dd (ddd)}}"/>

                                    <TextBlock Grid.Column="1"
                                               Foreground="#A8C7D9"
                                               Text="{Binding Time, StringFormat={}{0:hh\\:mm}}"/>

                                    <TextBlock Grid.Column="2"
                                               Foreground="#EAF6FF"
                                               Text="{Binding Title}"
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- 최근 Fossil -->
                <StackPanel Grid.Row="3" Margin="0,12,0,0">
                    <TextBlock Text="최근 Fossil" FontWeight="SemiBold" FontSize="14" Foreground="#EAF6FF" Margin="0,0,0,6"/>

                    <!-- 로딩 -->
                    <TextBlock Text="불러오는 중..." Opacity="0.7" Foreground="#A8C7D9">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsFossilsLoading}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- 오류 -->
                    <TextBlock Text="{Binding FossilsError}" Foreground="Tomato" TextWrapping="Wrap">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- 빈 상태 -->
                    <TextBlock Text="아직 기록이 없습니다" Opacity="0.7" Foreground="#A8C7D9">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsFossilsLoading}" Value="False"/>
                                            <Condition Binding="{Binding RecentFossils.Count}" Value="0"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- 리스트 -->
                    <ListBox x:Name="FossilList"
                            ItemsSource="{Binding RecentFossils}" Margin="0,6,0,0" Background="Transparent" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto"
                            MouseDoubleClick="FossilList_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10" Padding="10" Margin="0,0,0,8" BorderThickness="1" BorderBrush="#22FFFFFF" Background="#11FFFFFF">
                                    <StackPanel>
                                        <DockPanel LastChildFill="True">
                                            <TextBlock DockPanel.Dock="Left" Foreground="#A8C7D9" FontSize="12" Opacity="0.9"
                                                       Text="{Binding Ts, StringFormat={}{0:MM-dd HH:mm}}" />

                                            <Border DockPanel.Dock="Right" CornerRadius="8" Padding="6,2" Background="#11000000">
                                                <TextBlock Foreground="#A8C7D9" FontSize="12" Opacity="0.9"
                                                           Text="{Binding SourceCount, StringFormat=Sources: {0}}" />
                                            </Border>
                                        </DockPanel>

                                        <TextBlock Foreground="#EAF6FF" Margin="0,6,0,0"
                                                   Text="{Binding Content}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Page>
