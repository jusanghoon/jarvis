<Page x:Class="javis.Pages.TodosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <Grid Margin="14">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" CornerRadius="16" Background="#22000000" BorderBrush="#33BFE9FF" BorderThickness="1" Padding="12">
            <StackPanel>
                <TextBlock Text="Calendar" Foreground="#EAF6FF" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <Calendar SelectedDate="{Binding SelectedDate}" DisplayDate="{Binding SelectedDate}"/>
                <TextBlock Text="{Binding Status}" Foreground="#A8C7D9" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="2" CornerRadius="16" Background="#22000000" BorderBrush="#33BFE9FF" BorderThickness="1" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{Binding SelectedDate, StringFormat={}{0:yyyy-MM-dd (ddd)}}"
                           Foreground="#EAF6FF" FontSize="16" FontWeight="SemiBold"/>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Items}"
                         Background="Transparent"
                         BorderThickness="0"
                         Margin="0,12,0,12"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="12" Background="#11FFFFFF" BorderBrush="#22FFFFFF" BorderThickness="1" Padding="10" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding IsDone}"
                                              Command="{Binding DataContext.ToggleDoneCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                              CommandParameter="{Binding}"
                                              VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" Margin="10,0,10,0" VerticalAlignment="Center"
                                               Foreground="#A8C7D9"
                                               Text="{Binding Time, StringFormat={}{0:hh\\:mm}}"/>

                                    <TextBlock Grid.Column="2" VerticalAlignment="Center" Foreground="#EAF6FF"
                                               Text="{Binding Title}" TextWrapping="Wrap"/>

                                    <Button Grid.Column="3" Content="Delete"
                                            Padding="10,6"
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Border Grid.Row="2" CornerRadius="12" Background="#11FFFFFF" BorderBrush="#22FFFFFF" BorderThickness="1" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Height="36"
                                 VerticalContentAlignment="Center"
                                 Padding="10,0"
                                 Background="#22FFFFFF"
                                 Foreground="#EAF6FF"
                                 BorderBrush="#22FFFFFF"
                                 Text="{Binding NewTime, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBox Grid.Column="1" Margin="10,0,10,0"
                                 Height="36"
                                 VerticalContentAlignment="Center"
                                 Padding="10,0"
                                 Background="#22FFFFFF"
                                 Foreground="#EAF6FF"
                                 BorderBrush="#22FFFFFF"
                                 Text="{Binding NewTitle, UpdateSourceTrigger=PropertyChanged}"/>

                        <Button Grid.Column="3" Content="Add"
                                Height="36"
                                Command="{Binding AddCommand}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
