<Page x:Class="javis.Pages.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:models="clr-namespace:javis.Models"
      mc:Ignorable="d"
      Background="Transparent">

    <Page.Resources>
        <Style x:Key="RoomTabStyle" TargetType="ToggleButton">
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="MinWidth" Value="54"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#EAF6FF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd" CornerRadius="14" BorderBrush="#4A4A4A" Background="#2B2F36" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3B82F6"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#7A7A7A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinWidth" Value="90"/>
        </Style>
    </Page.Resources>

    <Grid x:Name="ChatRoot" Margin="14" AllowDrop="True" Drop="ChatRoot_Drop">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- (A) Top fixed action bar (back only) -->
        <DockPanel Grid.Row="0" x:Name="TopCommandBar" LastChildFill="True" Margin="0,0,0,8">
            <Button Content="← 뒤로가기" Click="Back_Click" HorizontalAlignment="Left" Padding="12,6"/>

            <Button x:Name="MainHistoryButton"
                    DockPanel.Dock="Right"
                    Content="이전 기록"
                    Click="MainHistory_Click"
                    Padding="12,6"
                    Visibility="Collapsed"/>
        </DockPanel>

        <!-- (A2) Topic command bar -->
        <Border Grid.Row="1" CornerRadius="12" Background="#22000000" BorderBrush="#33BFE9FF" BorderThickness="1" Padding="12" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="주제" Foreground="#EAF6FF" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>

                <TextBox x:Name="TopicBox"
                         Grid.Column="1"
                         Height="38"
                         VerticalContentAlignment="Center"
                         Background="#22FFFFFF"
                         BorderBrush="#22FFFFFF"
                         Foreground="#EAF6FF"
                         Padding="10,6"
                         Text="{Binding Topic, UpdateSourceTrigger=PropertyChanged}" />

                <Button Grid.Column="2" Content="적용" Margin="10,0,0,0" MinWidth="70" Height="38" Click="ApplyTopic_Click"/>
            </Grid>
        </Border>

        <!-- (B) Messages area -->
        <ListBox x:Name="ChatList"
                 Grid.Row="2"
                 ItemsSource="{Binding MessagesView}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.CanContentScroll="True"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Recycling">

            <!-- 내용이 비어있는/커서만 있는 메시지는 화면에 표시하지 않음 -->
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <!-- 스트리밍 placeholder 커서만 남는 경우 -->
                        <DataTrigger Binding="{Binding Text}" Value="|">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Text}" Value=" | ">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:ChatMessage}">
                    <Border x:Name="Bubble"
                            CornerRadius="16"
                            Padding="16"
                            MaxWidth="720"
                            Background="#22000000"
                            BorderBrush="#33BFE9FF"
                            BorderThickness="1"
                            Margin="0,10,0,10"
                            HorizontalAlignment="Left">
                        <StackPanel>
                            <TextBlock x:Name="Speaker"
                                       Margin="0,0,0,8"
                                       FontSize="12"
                                       Opacity="0.75"
                                       Foreground="#EAF6FF"
                                       Text="Jarvis"
                                       FontFamily="Segoe UI, Segoe UI Emoji"/>
                            <TextBlock Text="{Binding Text}"
                                       Foreground="#EAF6FF"
                                       TextWrapping="Wrap"
                                       TextTrimming="None"
                                       FontSize="16"
                                       LineHeight="22"
                                       FontFamily="Segoe UI, Segoe UI Emoji"/>
                        </StackPanel>
                    </Border>

                    <DataTemplate.Triggers>
                        <!-- User: right -->
                        <DataTrigger Binding="{Binding Role}" Value="user">
                            <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="Bubble" Property="Background" Value="#223AA0FF"/>
                            <Setter TargetName="Bubble" Property="BorderBrush" Value="#553AA0FF"/>
                            <Setter TargetName="Speaker" Property="Text" Value="You"/>
                        </DataTrigger>

                        <!-- Agent A: left -->
                        <DataTrigger Binding="{Binding Role}" Value="assistant_a">
                            <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Left"/>
                            <Setter TargetName="Bubble" Property="Background" Value="#2222C55E"/>
                            <Setter TargetName="Bubble" Property="BorderBrush" Value="#5522C55E"/>
                            <Setter TargetName="Speaker" Property="Text" Value="AI A"/>
                        </DataTrigger>

                        <!-- Agent B: right -->
                        <DataTrigger Binding="{Binding Role}" Value="assistant_b">
                            <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="Bubble" Property="Background" Value="#22F97316"/>
                            <Setter TargetName="Bubble" Property="BorderBrush" Value="#55F97316"/>
                            <Setter TargetName="Speaker" Property="Text" Value="AI B"/>
                        </DataTrigger>

                        <!-- Default assistant: left -->
                        <DataTrigger Binding="{Binding Role}" Value="assistant">
                            <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Left"/>
                            <Setter TargetName="Speaker" Property="Text" Value="Jarvis"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- (C) Bottom input bar -->
        <Border Grid.Row="3" CornerRadius="16" Background="#22000000" BorderBrush="#33BFE9FF" BorderThickness="1" Padding="12" Margin="0,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Room tabs (left) -->
                <StackPanel x:Name="RoomTabsPanel" Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                    <ToggleButton x:Name="RoomMainTab" Content="ME" Style="{StaticResource RoomTabStyle}" Click="RoomMain_Click" IsChecked="True"/>
                    <ToggleButton x:Name="RoomSoloTab" Content="SOLO" Style="{StaticResource RoomTabStyle}" Margin="8,0,0,0" Click="RoomSolo_Click"/>
                    <ToggleButton x:Name="RoomDuoTab" Content="DUO" Style="{StaticResource RoomTabStyle}" Margin="8,0,0,0" Click="RoomDuo_Click"/>
                </StackPanel>

                <!-- Input -->
                <TextBox x:Name="InputBox"
                         Grid.Row="0" Grid.Column="1"
                         Height="54"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalContentAlignment="Center"
                         Background="#22FFFFFF"
                         BorderBrush="#22FFFFFF"
                         Foreground="#EAF6FF"
                         Padding="12"
                         Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                         PreviewKeyDown="InputBox_PreviewKeyDown"/>

                <!-- Send/Cancel -->
                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="12,0,12,0" VerticalAlignment="Center">
                    <Button Margin="0,0,8,0" MinWidth="90" Height="54" Content="Send" Command="{Binding SendCommand}"/>
                    <Button MinWidth="90" Height="54" Content="Cancel" Command="{Binding CancelCommand}"/>
                </StackPanel>

                <!-- Existing SOLO/DUO toggles (execution) -->
                <StackPanel x:Name="BigModeButtonsPanel" Grid.Row="0" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <ToggleButton x:Name="SoloToggle"
                                  Content="SOLO"
                                  Width="110"
                                  Margin="0,0,8,0"
                                  Checked="SoloToggle_Checked"
                                  Unchecked="SoloToggle_Unchecked"/>

                    <ToggleButton x:Name="DuoToggle"
                                  Content="DUO"
                                  Width="90"
                                  Checked="DuoToggle_Checked"
                                  Unchecked="DuoToggle_Unchecked"/>
                </StackPanel>

                <TextBlock x:Name="SoloStatusText"
                           Grid.Row="1" Grid.ColumnSpan="4"
                           Margin="12,6,0,0"
                           Opacity="0.75"
                           Visibility="Collapsed"
                           Text=""
                           FontFamily="Segoe UI, Segoe UI Emoji"/>
            </Grid>
        </Border>
    </Grid>
</Page>
