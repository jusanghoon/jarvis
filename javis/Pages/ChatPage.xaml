<Page x:Class="javis.Pages.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="Transparent">

    <Grid x:Name="ChatRoot" Margin="14" AllowDrop="True" Drop="ChatRoot_Drop">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8" HorizontalAlignment="Right">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Padding" Value="10,6"/>
                    <Setter Property="MinWidth" Value="110"/>
                </Style>
            </StackPanel.Resources>
            <Button Content="Persona Folder" Click="OpenPersonaFolder_Click"/>
            <Button Content="Persona Reload" Margin="8,0,0,0" Click="ReloadPersona_Click"/>
            <Button Content="Import Files" Margin="8,0,0,0" Click="ImportFiles_Click"/>
            <Button Content="SFT Export" Margin="8,0,0,0" Click="ExportSft_Click"/>
        </StackPanel>

        <ListBox x:Name="ChatList"
                 Grid.Row="1"
                 ItemsSource="{Binding Messages}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.CanContentScroll="True"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Recycling">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="14"
                            Padding="12"
                            MaxWidth="760"
                            Background="#22000000"
                            BorderBrush="#33BFE9FF"
                            BorderThickness="1"
                            Margin="0,6">
                        <TextBlock Text="{Binding Text}" Foreground="#EAF6FF" TextWrapping="Wrap"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border Grid.Row="2" CornerRadius="16" Background="#22000000" BorderBrush="#33BFE9FF" BorderThickness="1" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="InputBox"
                         Grid.Row="0" Grid.Column="0"
                         Height="54"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalContentAlignment="Center"
                         Background="#22FFFFFF"
                         BorderBrush="#22FFFFFF"
                         Foreground="#EAF6FF"
                         Padding="12"
                         Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                         PreviewKeyDown="InputBox_PreviewKeyDown"/>

                <Button Grid.Row="0" Grid.Column="1"
                        Margin="10,0,0,0"
                        MinWidth="90" Height="54"
                        Content="Send"
                        Command="{Binding SendCommand}"/>

                <Button Grid.Row="0" Grid.Column="2"
                        Margin="10,0,0,0"
                        MinWidth="90" Height="54"
                        Content="Cancel"
                        Command="{Binding CancelCommand}"/>

                <ToggleButton x:Name="SoloToggle"
                              Grid.Row="0" Grid.Column="3"
                              Content="SOLO"
                              Width="110"
                              Margin="10,0,0,0"
                              Checked="SoloToggle_Checked"
                              Unchecked="SoloToggle_Unchecked"/>

                <TextBlock x:Name="SoloStatusText"
                           Grid.Row="1" Grid.ColumnSpan="4"
                           Margin="12,6,0,0"
                           Opacity="0.75"
                           Visibility="Collapsed"
                           Text=""/>
            </Grid>
        </Border>
    </Grid>
</Page>
