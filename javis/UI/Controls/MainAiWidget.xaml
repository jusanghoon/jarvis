<UserControl x:Class="javis.UI.Controls.MainAiWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="56" d:DesignWidth="420">

    <Border CornerRadius="14"
            Background="#1A000000"
            BorderBrush="#33BFE9FF"
            BorderThickness="1"
            Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="86"/>
                    <ColumnDefinition Width="86"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Height="34"
                         FontSize="13"
                         VerticalContentAlignment="Center"
                         Padding="10,0"
                         Background="#22FFFFFF"
                         Foreground="#EAF6FF"
                         BorderBrush="#22FFFFFF"
                         Text="{Binding PromptText, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Column="1" Margin="10,0,0,0"
                        Height="34"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Background="#2A76D2"
                        Foreground="#EAF6FF"
                        BorderBrush="#33BFE9FF"
                        Command="{Binding AskCommand}"
                        Content="질문"/>

                <Button Grid.Column="2" Margin="10,0,0,0"
                        Height="34"
                        FontSize="13"
                        Background="#11FFFFFF"
                        Foreground="#EAF6FF"
                        BorderBrush="#22FFFFFF"
                        Command="{Binding OpenChatCommand}"
                        Content="Chat"/>
            </Grid>

            <Border Grid.Row="1"
                    Margin="0,8,0,0"
                    CornerRadius="10"
                    Background="#11000000"
                    BorderBrush="#22FFFFFF"
                    BorderThickness="1"
                    Padding="10">
                <TextBlock Foreground="#EAF6FF"
                           FontSize="12"
                           TextWrapping="Wrap"
                           Text="{Binding AnswerText}"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
