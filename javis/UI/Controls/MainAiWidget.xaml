<UserControl x:Class="javis.UI.Controls.MainAiWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:javis.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="56" d:DesignWidth="420">

    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding AskCommand}" />
    </UserControl.InputBindings>

    <UserControl.Resources>
        <Style x:Key="BubbleBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="22"
            Background="#90FFFFFF"
            BorderBrush="#33FFFFFF"
            BorderThickness="1"
            Padding="14,14,14,18">
        <Grid>
            <!-- Cyber grid overlay -->
            <Border IsHitTestVisible="False" CornerRadius="22">
                <Border.Background>
                    <VisualBrush Opacity="0.03" TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                        <VisualBrush.Visual>
                            <Grid Width="20" Height="20" Background="Transparent">
                                <Path Data="M 20 0 L 0 0 0 20" Stroke="#FF8A6BFF" StrokeThickness="1"/>
                            </Grid>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Border.Background>
            </Border>

            <Grid ClipToBounds="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

			<!-- Header: vertical command stack -->
			<Border Grid.Row="0" Margin="0,0,0,10" Padding="10" ClipToBounds="False" Background="Transparent">
				<Grid ClipToBounds="False">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<controls:CyberHeartControl x:Name="SoloHeart"
									   Grid.Row="0"
									   Width="110"
									   Height="110"
									   HorizontalAlignment="Center"
									   VerticalAlignment="Center"
									   Margin="0,20,0,10"
									   IsThinking="{Binding IsSoloThinkingStarting}"/>

					<UniformGrid Grid.Row="1" Rows="2" Columns="2" HorizontalAlignment="Stretch" Margin="15,10,15,20">
						<Button Content="SCAN" Command="{Binding ScanSystemCommand}" FontWeight="Bold" Height="66" Margin="0,0,10,10" Foreground="#FF00D2FF" BorderBrush="#FF00D2FF" Background="Transparent" BorderThickness="1" Padding="5">
							<Button.Effect>
								<DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#FF00D2FF"/>
							</Button.Effect>
						</Button>
						<Button Content="ANALYZE" Command="{Binding ProposeRefactorCommand}" FontWeight="Bold" Height="66" Margin="0,0,0,10" Foreground="#FF8A6BFF" BorderBrush="#FF8A6BFF" Background="Transparent" BorderThickness="1" Padding="5">
							<Button.Effect>
								<DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#FF8A6BFF"/>
							</Button.Effect>
						</Button>
						<Button Content="EXECUTE" Command="{Binding ExecuteRefactorCommand}" FontWeight="Bold" Height="66" Margin="0,0,10,0" Foreground="#FF00FF85" BorderBrush="#FF00FF85" Background="Transparent" BorderThickness="1" Padding="5">
							<Button.Effect>
								<DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#FF00FF85"/>
							</Button.Effect>
						</Button>
						<Button Content="RESTORE" Command="{Binding RestoreLastChangeCommand}" FontWeight="Bold" Height="66" Margin="0" Foreground="#FFFF4B4B" BorderBrush="#FFFF4B4B" Background="Transparent" BorderThickness="1" Padding="5">
							<Button.Effect>
								<DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#FFFF4B4B"/>
							</Button.Effect>
						</Button>
					</UniformGrid>

					<Border Grid.Row="2" Background="#FF0F0F1A" CornerRadius="10" BorderBrush="#FF252545" BorderThickness="1" Padding="15">
						<ScrollViewer x:Name="LogScrollViewer"
									  VerticalScrollBarVisibility="Visible"
									  HorizontalScrollBarVisibility="Disabled"
									  Background="Transparent">
							<ScrollViewer.Resources>
								<Style TargetType="ScrollBar" BasedOn="{StaticResource {x:Type ScrollBar}}" />
							</ScrollViewer.Resources>
							<TextBlock Text="{Binding ThinkingStage}"
									   TextWrapping="Wrap"
									   Foreground="#FF00D2FF"
									   FontFamily="Cascadia Code"
									   FontSize="12">
								<TextBlock.Effect>
									<DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.6" Color="#FF00D2FF"/>
								</TextBlock.Effect>
							</TextBlock>
						</ScrollViewer>
					</Border>

					<ProgressBar Grid.Row="3" Height="6" Margin="0,10,0,0" IsIndeterminate="{Binding IsSoloThinkingStarting}" Foreground="#FF8A6BFF" Background="#33000000"/>
				</Grid>
			</Border>

            <!-- Messages -->
            <Border Grid.Row="1"
                    x:Name="ChatArea"
                    CornerRadius="20"
                    Background="#44FFFFFF"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8">
                                    <Border x:Name="Bubble" Style="{StaticResource BubbleBorder}" Background="#66FFFFFF"
                                            HorizontalAlignment="Left"
                                            Margin="0">
                                        <TextBlock Text="{Binding Text}" TextWrapping="Wrap" Foreground="#FF1F2B36"/>
                                    </Border>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Role}" Value="user">
                                        <Setter TargetName="Bubble" Property="Background" Value="#55EAF4FF"/>
                                        <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Right"/>
                                        <Setter TargetName="Bubble" Property="BorderBrush" Value="#44B39DFF"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Role}" Value="assistant">
                                        <Setter TargetName="Bubble" Property="Background" Value="#66FFFFFF"/>
                                        <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Left"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Role}" Value="system">
                                        <Setter TargetName="Bubble" Property="Background" Value="#55FFF1F6"/>
                                        <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Left"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Input row -->
            <Grid Grid.Row="2" x:Name="InputArea" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="92"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Style="{StaticResource PastelInputTextBox}"
                         Height="38"
                         Background="#EEFFFFFF"
                         Foreground="#FF000000"
                         BorderBrush="#33FFFFFF"
                         Text="{Binding PromptText, UpdateSourceTrigger=PropertyChanged}" />

                <Button Grid.Column="1"
                        Margin="10,0,0,0"
                        Height="38"
                        MinWidth="72"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Background="#FF78AFFF"
                        Foreground="White"
                        BorderBrush="#5578AFFF"
                        Command="{Binding AskCommand}"
                        Content="질문">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd"
                                    CornerRadius="18"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Opacity" Value="0.92"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Bd" Property="Opacity" Value="0.84"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            </Grid>
        </Grid>
    </Border>

</UserControl>
