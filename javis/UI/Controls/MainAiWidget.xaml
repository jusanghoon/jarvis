<UserControl x:Class="javis.UI.Controls.MainAiWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:javis.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="56" d:DesignWidth="420">

    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding AskCommand}" />
    </UserControl.InputBindings>

    <UserControl.Resources>
        <Style x:Key="BubbleBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="22"
            Background="#90FFFFFF"
            BorderBrush="#33FFFFFF"
            BorderThickness="1"
            Padding="14,14,14,18">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header (toggle) -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <controls:CyberHeartControl x:Name="SoloHeart"
                                           Width="110"
                                           Height="110"
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"
                                           IsThinking="{Binding IsSoloThinkingStarting}"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="재민"
                               FontWeight="SemiBold"
                               Foreground="#55606C"
                               Margin="0,0,0,4"/>

                    <Border Background="#22000000" CornerRadius="10" Padding="10,8" BorderBrush="#22000000" BorderThickness="1">
                        <StackPanel>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="92">
                                <TextBlock Text="{Binding ThinkingStage}"
                                           TextWrapping="Wrap"
                                           Foreground="#FF8A6BFF"
                                           FontFamily="Consolas"
                                           FontSize="12"/>
                            </ScrollViewer>

                            <ProgressBar Height="6"
                                         Margin="0,8,0,0"
                                         IsIndeterminate="{Binding IsSoloThinkingStarting}"
                                         Foreground="#FF6FD6FF"
                                         Background="#22000000"/>

                            <TextBlock Text="{Binding ThinkingProgress}"
                                       TextWrapping="Wrap"
                                       Foreground="#FF6FD6FF"
                                       FontFamily="Consolas"
                                       FontSize="11"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Messages -->
            <Border Grid.Row="1"
                    x:Name="ChatArea"
                    CornerRadius="20"
                    Background="#44FFFFFF"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8">
                                    <Border x:Name="Bubble" Style="{StaticResource BubbleBorder}" Background="#66FFFFFF"
                                            HorizontalAlignment="Left"
                                            Margin="0">
                                        <TextBlock Text="{Binding Text}" TextWrapping="Wrap" Foreground="#FF1F2B36"/>
                                    </Border>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Role}" Value="user">
                                        <Setter TargetName="Bubble" Property="Background" Value="#55EAF4FF"/>
                                        <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Right"/>
                                        <Setter TargetName="Bubble" Property="BorderBrush" Value="#44B39DFF"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Role}" Value="assistant">
                                        <Setter TargetName="Bubble" Property="Background" Value="#66FFFFFF"/>
                                        <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Left"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Role}" Value="system">
                                        <Setter TargetName="Bubble" Property="Background" Value="#55FFF1F6"/>
                                        <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Left"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Input row -->
            <Grid Grid.Row="2" x:Name="InputArea" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="92"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Style="{StaticResource PastelInputTextBox}"
                         Height="38"
                         Background="#EEFFFFFF"
                         BorderBrush="#33FFFFFF"
                         Text="{Binding PromptText, UpdateSourceTrigger=PropertyChanged}" />

                <Button Grid.Column="1"
                        Margin="10,0,0,0"
                        Height="38"
                        MinWidth="72"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Background="#FF78AFFF"
                        Foreground="White"
                        BorderBrush="#5578AFFF"
                        Command="{Binding AskCommand}"
                        Content="질문">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd"
                                    CornerRadius="18"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Opacity" Value="0.92"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Bd" Property="Opacity" Value="0.84"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>

</UserControl>
