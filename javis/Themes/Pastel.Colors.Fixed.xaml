<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PastelBg">#FFF7FBFF</Color>
    <Color x:Key="PastelText">#FF2B2B2B</Color>
    <Color x:Key="PastelMuted">#FF5E6A76</Color>

    <Color x:Key="PastelCardBg">#CCFFFFFF</Color>
    <Color x:Key="PastelCardBorder">#33B39DFF</Color>

    <Color x:Key="PastelAccent">#FF7BB6FF</Color>
    <Color x:Key="PastelAccent2">#FFFF9BC1</Color>

    <Color x:Key="PastelButtonBg">#FFF2F7FF</Color>
    <Color x:Key="PastelButtonHover">#FFE8F1FF</Color>
    <Color x:Key="PastelButtonPressed">#FFDCEAFF</Color>
    <Color x:Key="PastelButtonBorder">#66B39DFF</Color>

    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource PastelBg}"/>
    <SolidColorBrush x:Key="TextPrimary" Color="{StaticResource PastelText}"/>
    <SolidColorBrush x:Key="TextMuted" Color="{StaticResource PastelMuted}"/>

    <SolidColorBrush x:Key="CardBackground" Color="{StaticResource PastelCardBg}"/>
    <SolidColorBrush x:Key="CardBorder" Color="{StaticResource PastelCardBorder}"/>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource PastelAccent}"/>
    <SolidColorBrush x:Key="AccentBrush2" Color="{StaticResource PastelAccent2}"/>

    <SolidColorBrush x:Key="ButtonBg" Color="{StaticResource PastelButtonBg}"/>
    <SolidColorBrush x:Key="ButtonBgHover" Color="{StaticResource PastelButtonHover}"/>
    <SolidColorBrush x:Key="ButtonBgPressed" Color="{StaticResource PastelButtonPressed}"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="{StaticResource PastelButtonBorder}"/>

    <!-- Background (no image): soft pastel sky-like gradient -->
    <LinearGradientBrush x:Key="PastelBackgroundImageBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFF6FAFF" Offset="0"/>
        <GradientStop Color="#FFEFF7FF" Offset="0.35"/>
        <GradientStop Color="#FFFFF2F7" Offset="0.7"/>
        <GradientStop Color="#FFF3FFF8" Offset="1"/>
    </LinearGradientBrush>

    <!-- A subtle white overlay used on top of the background image for readability -->
    <SolidColorBrush x:Key="WindowOverlayBrush" Color="#BFFFFFFF"/>

    <SolidColorBrush x:Key="PanelPinkBg" Color="#EFFFF2F7"/>
    <SolidColorBrush x:Key="PanelPinkBorder" Color="#66FF9BC1"/>

    <SolidColorBrush x:Key="PanelMintBg" Color="#EFFFFAF0"/>
    <SolidColorBrush x:Key="PanelMintBorder" Color="#6697E39F"/>

    <SolidColorBrush x:Key="PanelBlueBg" Color="#EEECF6FF"/>
    <SolidColorBrush x:Key="PanelBlueBorder" Color="#6687C7FF"/>

    <SolidColorBrush x:Key="ChatBubbleBaseBg" Color="#F7FFFFFF"/>
    <SolidColorBrush x:Key="ChatBubbleUserBg" Color="#FFEAF4FF"/>
    <SolidColorBrush x:Key="ChatBubbleAgentABg" Color="#EFFFF7F1"/>
    <SolidColorBrush x:Key="ChatBubbleAgentBBg" Color="#FFFFF1F6"/>

    <!-- Soft ornament accents (no image) -->
    <RadialGradientBrush x:Key="PastelBlobPink" RadiusX="0.9" RadiusY="0.9" Center="0.5,0.5" GradientOrigin="0.35,0.35">
        <GradientStop Color="#80FF9BC1" Offset="0"/>
        <GradientStop Color="#00FF9BC1" Offset="1"/>
    </RadialGradientBrush>

    <RadialGradientBrush x:Key="PastelBlobBlue" RadiusX="0.9" RadiusY="0.9" Center="0.5,0.5" GradientOrigin="0.35,0.35">
        <GradientStop Color="#807BB6FF" Offset="0"/>
        <GradientStop Color="#007BB6FF" Offset="1"/>
    </RadialGradientBrush>

    <RadialGradientBrush x:Key="PastelBlobMint" RadiusX="0.9" RadiusY="0.9" Center="0.5,0.5" GradientOrigin="0.35,0.35">
        <GradientStop Color="#8097E39F" Offset="0"/>
        <GradientStop Color="#0097E39F" Offset="1"/>
    </RadialGradientBrush>

</ResourceDictionary>
