<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- High-contrast palette (pastel off) -->
    <!-- WindowBackground -->
    <Color x:Key="PastelBg">#FF1A1A2E</Color>
    <!-- Default text -->
    <Color x:Key="PastelText">#FFFFFFFF</Color>
    <!-- Secondary text -->
    <Color x:Key="PastelMuted">#FFA0A0A0</Color>
    <!-- Disabled text -->
    <Color x:Key="TextDisabledColor">#FF505050</Color>

    <!-- Card / section background -->
    <Color x:Key="PastelCardBg">#FF252545</Color>
    <Color x:Key="PastelCardBorder">#FF3A3A4A</Color>

    <Color x:Key="PastelAccent">#FF8A6BFF</Color>
    <Color x:Key="PastelAccent2">#FF00D2FF</Color>

    <!-- Semantic aliases (neon accents) -->
    <Color x:Key="PrimaryColor">#FF8A6BFF</Color>
    <Color x:Key="SecondaryColor">#FF00D2FF</Color>

    <Color x:Key="PastelButtonBg">#FF162033</Color>
    <Color x:Key="PastelButtonHover">#FF1B2740</Color>
    <Color x:Key="PastelButtonPressed">#FF22314D</Color>
    <Color x:Key="PastelButtonBorder">#664C8DFF</Color>

    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource PastelBg}"/>
    <SolidColorBrush x:Key="TextPrimary" Color="{StaticResource PastelText}"/>
    <SolidColorBrush x:Key="TextMuted" Color="{StaticResource PastelMuted}"/>
    <SolidColorBrush x:Key="TextSecondary" Color="{StaticResource PastelMuted}"/>
    <SolidColorBrush x:Key="TextDisabled" Color="{StaticResource TextDisabledColor}"/>

    <SolidColorBrush x:Key="CardBackground" Color="{StaticResource PastelCardBg}"/>
    <SolidColorBrush x:Key="CardBorder" Color="{StaticResource PastelCardBorder}"/>

    <!-- Border definition -->
    <SolidColorBrush x:Key="BorderColor" Color="#FF3A3A4A"/>
    <SolidColorBrush x:Key="PrimaryBorder" Color="#FF8A6BFF"/>
    <SolidColorBrush x:Key="SelectedBorder" Color="#FF00D2FF"/>

    <!-- Alias keys for XAML cleanup -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource PastelCardBg}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource PastelText}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PastelAccent}"/>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource PastelAccent}"/>
    <SolidColorBrush x:Key="AccentBrush2" Color="{StaticResource PastelAccent2}"/>

    <!-- selection/highlight tint -->
    <SolidColorBrush x:Key="AccentBrushSoft" Color="#338A6BFF"/>
    <SolidColorBrush x:Key="SelectedBackground" Color="#338A6BFF"/>
    <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="#338A6BFF"/>

    <!-- Status colors (neon-friendly on dark background) -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#FF2DFFB3"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFFFD166"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#FFFF4D7D"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#FF00D2FF"/>

    <SolidColorBrush x:Key="ButtonBg" Color="{StaticResource PastelButtonBg}"/>
    <SolidColorBrush x:Key="ButtonBgHover" Color="{StaticResource PastelButtonHover}"/>
    <SolidColorBrush x:Key="ButtonBgPressed" Color="{StaticResource PastelButtonPressed}"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="{StaticResource PastelButtonBorder}"/>

    <!-- Background image disabled for high-contrast mode -->
    <SolidColorBrush x:Key="PastelBackgroundImageBrush" Color="{StaticResource PastelBg}"/>

    <!-- Pastel ornaments used by `MainWindow.xaml` -->
    <SolidColorBrush x:Key="PastelBlobBlue" Color="#664C8DFF"/>
    <SolidColorBrush x:Key="PastelBlobPink" Color="#66FF7AB6"/>
    <SolidColorBrush x:Key="PastelBlobMint" Color="#6648E6C8"/>

    <!-- Panel tints (like the reference image) -->
    <SolidColorBrush x:Key="PanelPinkBg" Color="#FF121A2A"/>
    <SolidColorBrush x:Key="PanelPinkBorder" Color="#334C8DFF"/>

    <SolidColorBrush x:Key="PanelMintBg" Color="#FF121A2A"/>
    <SolidColorBrush x:Key="PanelMintBorder" Color="#334C8DFF"/>

    <SolidColorBrush x:Key="PanelBlueBg" Color="#FF121A2A"/>
    <SolidColorBrush x:Key="PanelBlueBorder" Color="#334C8DFF"/>

    <!-- Chat bubble colors -->
    <SolidColorBrush x:Key="ChatBubbleBaseBg" Color="#FF0F172A"/>
    <SolidColorBrush x:Key="ChatBubbleUserBg" Color="#FF122449"/>
    <SolidColorBrush x:Key="ChatBubbleAgentABg" Color="#FF1A2030"/>
    <SolidColorBrush x:Key="ChatBubbleAgentBBg" Color="#FF1A2030"/>

</ResourceDictionary>
