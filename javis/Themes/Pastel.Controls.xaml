<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Global font fallback (Korean + emoji) -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Malgun Gothic, Segoe UI, Segoe UI Emoji"/>
        <Setter Property="Foreground" Value="#FF24303A"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.18" Color="#FFFFFFFF"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="Malgun Gothic, Segoe UI, Segoe UI Emoji"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="Malgun Gothic, Segoe UI, Segoe UI Emoji"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>

    <Style TargetType="ContentControl">
        <Setter Property="FontFamily" Value="Malgun Gothic, Segoe UI, Segoe UI Emoji"/>
    </Style>

    <Style TargetType="Control">
        <Setter Property="FontFamily" Value="Malgun Gothic, Segoe UI, Segoe UI Emoji"/>
    </Style>

    <!-- Default button style (pastel pill) -->
    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="Background" Value="{StaticResource ButtonBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ButtonBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="MinWidth" Value="90"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="14"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource ButtonBgHover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource ButtonBgPressed}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Title bar button (small) -->
    <Style x:Key="TitleBarButton" TargetType="Button">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Width" Value="44"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Background" Value="#55FFFFFF"/>
        <Setter Property="BorderBrush" Value="#33B39DFF"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Icon font (Windows default) -->
    <FontFamily x:Key="IconFont">Segoe MDL2 Assets</FontFamily>

    <!-- Chat input TextBox (used in ChatPage.InputBox) -->
    <Style x:Key="PastelChatInputTextBox" TargetType="TextBox">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#FF1E2933"/>
        <Setter Property="Background" Value="#F2FFFFFF"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="CaretBrush" Value="#FF1E2933"/>
        <Setter Property="SelectionBrush" Value="#663B82F6"/>
    </Style>

</ResourceDictionary>
